{
  "name": "xolof/sleipnir",
  "type": "wordpress-theme",
  "license": "MIT",
  "description": "Lightweight Wordpress theme focusing on performance and accessibility.",
  "homepage": "https://github.com/Xolof/sleipnir",
  "authors": [
    {
      "name": "Olof Johansson",
      "email": "olof@liberdev.se",
      "homepage": "https://oljo.online"
    }
  ],
  "keywords": [
    "wordpress"
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "require": {
    "composer/installers": "v2.3.0",
    "php": ">=8.2",
    "davidwebca/wordpress-menu-classes": "^2.0",
    "roots/acorn": "^5.0"
  },
  "require-dev": {
    "laravel/pint": "^1.22",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.1",
    "rector/rector": "^2.0",
    "szepeviktor/phpstan-wordpress": "^2.0"
  },
  "suggest": {
    "log1x/sage-directives": "A collection of useful Blade directives for WordPress and Sage (^1.0)."
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "phpstan/extension-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-autoload-dump": [
      "Roots\\Acorn\\ComposerScripts::postAutoloadDump"
    ],
    "post-install-cmd": [
        "composer install"
    ]
  }
}
